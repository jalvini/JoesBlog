package database

import (
	"database/sql"
	"log"
)

var DB string = "****"
var DBUSER string= "****"
var DBPASSWORD string = "****"
var DBHOST string = "localhost"
var DBPORT string = "3306"

func DbInit() (*sql.DB){
	db, err := sql.Open("mysql", DBUSER  + ":" + DBPASSWORD + "@tcp(" + DBHOST + ":" + DBPORT + ")/" + DB)

	if err != nil {
		log.Print(err.Error())
	}
	return db
}
